{{>layout/header}}
<div class="container">
    <div class="container d-flex justify-content-between align-items-center">
        <h2 class="mt-5">게시판</h2>
        <a href="/articles/write"><button id="new-post-button" class="btn btn-primary mt-5">새로운 글쓰기</button></a>
    </div>
    <hr>
    <table class="table">
        <thead>
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>글쓴이</th>
            <th>날짜</th>
        </tr>
        </thead>
        <tbody>
        {{#articles}}
        <tr>
            <td>{{id}}</td>
            <td><a href="/articles/{{id}}">{{title}}</a></td>
            <td>{{author}}</td>
            <td>{{createdTime}}</td>
        </tr>
        {{/articles}}
        </tbody>
    </table>
    {{#paginationInfo}}
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item {{#isFirstPage}}disabled{{/isFirstPage}}">
                <a class="page-link" href="/articles?page={{previousPage}}" tabindex="-1" {{#isFirstPage}}aria-disabled="true"{{/isFirstPage}}>이전</a>
            </li>
            {{#paginationInfo.pageNumbers}}
                <li class="page-item">
                    <a class="page-link" href="/articles?page={{this}}">{{this}}</a>
                </li>
            {{/paginationInfo.pageNumbers}}
            <li class="page-item {{#isLastPage}}disabled{{/isLastPage}}">
                <a class="page-link" href="/articles?page={{nextPage}}" {{#isLastPage}}aria-disabled="true"{{/isLastPage}}>다음</a>
            </li>
        </ul>
    </nav>
    {{/paginationInfo}}
</div>

{{>layout/footer}}
