{{>layout/header}}
<body>

<div class="container mt-5">
    <h2>글쓰기</h2>
    <form id="write-form" method="post" action="/articles/create">
        <div class="form-group">
            <label for="post-title">제목</label>
            <input type="text" class="form-control" name="title" id="post-title" placeholder="제목을 입력하세요">
        </div>
        <div class="form-group">
            <label for="post-content">내용</label>
            <textarea class="form-control" name="contents" id="post-content" rows="10"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">글 올리기</button>
    </form>
</div>
</body>
{{>layout/footer}}
